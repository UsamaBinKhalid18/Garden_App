<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:backgroundTint="#D5914C"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv_all_plants">

    <ImageView
        android:id="@+id/iv_plant_card"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="start|center"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_plant_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:background="@drawable/outline_box"
        android:src="@drawable/ic_card_button_frontyard"
        android:importantForAccessibility="no"
        android:id="@+id/bt_add_to_garden"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share"
        android:layout_gravity="end|top"
        android:backgroundTint="#0000"
        android:importantForAccessibility="no"
        android:id="@+id/bt_share_plant"
        />
</androidx.cardview.widget.CardView>